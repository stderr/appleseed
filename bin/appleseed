require 'appleseed'
# don't get excited, it's a dummy local api token
Appleseed.configure { |c| c.api_token = '1~JYDZKYMtbhiSbrepwEZqPO7ZLKoxPsS1hG72YwvPpDTP5vM5fWcWRRMitOeKCrFD' }
yaml = <<-eos
course:
  size: large
eos

template = Appleseed::Templating.from(yaml)
Appleseed::Seeding.seed_with(template)

